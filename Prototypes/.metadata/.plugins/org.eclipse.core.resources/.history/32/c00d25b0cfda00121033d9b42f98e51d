import com.badlogic.gdx.graphics.glutils.ShapeRenderer;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer.ShapeType;

public class Player {
	private Texture   texture;
	private Sprite    sprite;
	private Rectangle boundingBox;
	private Vector3   position;
	
	public Player(){
		//TODO: Fill in the texture stuff here once you're ready
		position = new Vector3(0,128/2, 0);
		boundingBox = new Rectangle(position.x, position.y, 128, 128);
	}
	
	public void update(){
		if(Gdx.input.isTouched()){
			position.x = Gdx.input.getX() - 128/2;
		}
	}
	
	public void draw(SpriteBatch batch){
		//TODO: fill this in once you've got the bounding boxes all set up
	}
	
	public void drawDebugRectangle(ShapeRenderer shapeRenderer){
		shapeRenderer.setColor(1, 1, 0, 1);
		shapeRenderer.box(position.x, position.y, 0, boundingBox.width, boundingBox.height, 0);
	}
	
	public void dispose(){
		//TODO: dispose of everything once you're done using player
	}
}
