package com.me.shootemupPEWPEW.player;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.Sprite;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.math.Rectangle;
import com.badlogic.gdx.math.Vector3;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer.ShapeType;

public class Player {
	private Texture   texture;
	private Sprite    sprite;
	private Rectangle boundingBox;
	private Vector3   position;
	private float     displayHeight;
	private int       health;
	
	/**
	 * Constructor for the player's ship.
	 * @param shipWidth 
	 * @param displayWidth 
	 * @param displayHeight
	 * @return The player's ship, including collision, position, and drawing data
	 */
	public Player(int shipWidth, float displayWidth, float displayHeight){
		
		//TODO: Fill in the texture stuff here once you're ready
		this.displayHeight = displayHeight;
		position = new Vector3(displayWidth/2 - shipWidth/2, 75, 0);
		boundingBox = new Rectangle(position.x, position.y, shipWidth, shipWidth);
		health = 5;
	}
	
	
	/**
	 * Updates the status of the ship after each frame tick. 
	 * @returns void
	 */
	public void update(){
		
		//are you touching the screen?
		if(Gdx.input.isTouched()){
			float offset = boundingBox.width/2;
			position.x = Gdx.input.getX() - offset;
			position.y = displayHeight - Gdx.input.getY() - offset;
		}
		
		//TODO: Did your ship get hit by a bullet or an enemy?	
	}
	
	public void draw(SpriteBatch batch){
		//TODO: fill this in once you've got the bounding boxes all set up
	}
	
	public void drawDebugRectangle(ShapeRenderer shapeRenderer){
		shapeRenderer.setColor(1, 1, 0, 1);
		shapeRenderer.box(position.x, position.y, 0, boundingBox.width, boundingBox.height, 0);
	}
	
	public int getHealth(){
		return health;
	}
	
	public void dispose(){
		//TODO: dispose of everything once you're done using player
	}
}
